pipeline {
    agent any
    stages {
        stage('checkout') {
            steps {
                sh "rm -rf *"
                sh 'git clone https://github.com/priya027v/hello-world-war'
            }
        }
           stage('Build') {
            steps {
                   sh '''
                    ls
                    pwd
                    cd hello-world-war
                    echo $PWd
                    ls
                    mvn clean package
                    echo "build completed"
                '''
            }
        }
           stage('Deploy') {
            steps {
                  sh '''
                    echo "Deploying WAR to Tomcat"

                    # Copy WAR file to Tomcat webapps
                    sudo cp hello-world-war/target/*.war /opt/apache-tomcat-9.0.113/webapps/

                    # Restart Tomcat
                    sudo /opt/apache-tomcat-9.0.113/bin/shutdown.sh || true
                    sleep 5
                    sudo /opt/apache-tomcat-9.0.113/bin/startup.sh

                    echo "Deployment completed"
                '''
            }
        }
    }
}
